# SYSTEM SETTINGS: Commands to configure macOS system preferences and behaviors.
SETTINGS=(
  "defaults write -g com.apple.mouse.scaling 3"     # Sets the mouse speed to 3
  "defaults write -g com.apple.trackpad.scaling 3"   # Sets the trackpad speed to 3
  "defaults write com.apple.driver.AppleBluetoothMultitouch.mouse MouseButtonMode TwoButton" # Sets the Bluetooth mouse to two-button mode
  "defaults write com.apple.AppleMultitouchMouse.plist MouseButtonMode TwoButton"   # Sets the multi-touch mouse to two-button mode
  "defaults write -g AppleShowAllExtensions -bool true"     # Shows all file extensions in Finder
  "defaults write com.apple.finder AppleShowAllFiles true"   # Shows hidden files in Finder
  "defaults write com.apple.finder ShowPathbar -bool true"   # Shows the path bar in Finder
  "defaults write com.apple.finder ShowStatusBar -bool true"  # Shows the status bar in Finder
  "defaults write com.apple.finder NewWindowTarget PfHm"      # Makes new Finder windows open in the home directory
  "defaults write com.apple.finder FXPreferredViewStyle Nlsv"  # Sets the preferred view style in Finder to list view
  "defaults write com.apple.finder _FXSortFoldersFirst -bool true"  # Makes Finder sort folders before files
  "defaults -currentHost write com.apple.ImageCapture disableHotPlug -bool true" # Stops Photos from opening automatically when devices are plugged in
  "defaults write com.apple.desktopservices DSDontWriteNetworkStores -bool true"    # Dont create .DS_Store Files On Network Volumes
  "defaults write com.apple.desktopservices DSDontWriteUSBStores -bool true"       # Dont create .DS_Store Files On USB Volumes
  "defaults write com.apple.finder FXEnableExtensionChangeWarning -bool false"    # Disable the warning when changing a file extension
  "chflags nohidden ~/Library"  # Makes the Library folder visible in Finder
)

